  <form action="/release/edit/<%= @release_info["id"] %>" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= @release_info["name"] %>" required><br>

        <label for="artist">Artist:</label>
        <input type="text" id="artist" name="artist" value="<%= @release_info["artist"]  %>" required><br>

        <label for="length">Length:</label>
        <input type="text" id="length" name="length" value="<%=  @release_info["length"]  %>" required><br>

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="0" max="10" step="0.1" value="<%= @release_info["rating"].to_s || '' %>" required><br>

        <label for="type">Type:</label>
        <select id="type" name="type" required>
            <option value="album" <%= 'selected' if @release_info["type"] == 'album' %>>Album</option>
            <option value="single" <%= 'selected' if @release_info["type"] == 'single' %>>Single</option>
            <option value="ep" <%= 'selected' if @release_info["type"] == 'ep' %>>EP</option>
        </select><br>

        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="<%= @release_info["genre"]%>" required><br>

        <label for="release_date">Release Date:</label>
        <input type="date" id="release_date" name="release_date"  value="<%= @release_info["release_date"]%>" required><br>

        <input type="submit" value="Update Release">
    </form>