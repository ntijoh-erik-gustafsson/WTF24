<h2>Name: <%= @release_info["name"] %></h2>
<h3>Artist: <%= @release_info["artist"] %></h2>
<img src="<%= @release_info["image_path"] %>" alt="Release Artwork" style="max-width: 200px;">

<h3>Reviews:</h3>

<%= @review_info %>

<% @review_info.each do |review| %>
  <div>
    <p><strong>Rating:</strong> <%= review["review_rating"] %></p>
    <p><strong>Review Text:</strong> <%= review["review_text"] %></p>
    <hr>
  </div>
<% end %>


<form action="/release/review/<%= @release_info["id"] %>" method="post">
  <label for="review_text">Review Text:</label><br>
  <textarea id="review_text" name="review_text" rows="8" cols="50" required></textarea><br><br>
  
  <label for="rating">Rating (1-10):</label><br>
  <input type="number" id="rating" name="rating" min="1" max="10" step="0.1" required><br><br>
  
  <input type="submit" value="Submit Review">
</form>